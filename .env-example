# APPLICATION SETTINGS

NODE_ENV=development
APP_PORT=3000
CORS_ALLOWED_ORIGINS=http://localhost:3000

# DATABASE SETTINGS

DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=noteslink-user
DB_PASSWORD=your-secure-password-here
DB_DATABASE=noteslink-db
DB_SYNCHRONIZE=true
DB_AUTOLOAD_ENTITIES=true

# JWT SETTINGS
# Use a strong and unique secret. Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_SECRET=your-jwt-secret-here
JWT_TOKEN_AUDIENCE=http://localhost:3000
JWT_TOKEN_ISSUE=http://localhost:3000
JWT_TTL=3600
JWT_REFRESH_TTL=2592000
